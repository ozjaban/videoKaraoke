{{#if hasLabel}}
  <label class="control-label {{horizontalLabelGridClass}} {{if invisibleLabel "sr-only"}}" for="{{formElementId}}">{{label}}</label>
  <div class="{{horizontalInputGridClass}}">
    <textarea
      value={{value}}
      class="form-control"
      oninput={{action "change" value="target.value"}}
      onchange={{action "change" value="target.value"}}
      id={{formElementId}}
      name={{name}}
      cols={{cols}}
      rows={{rows}}
      placeholder={{placeholder}}
      autofocus={{autofocus}}
      disabled={{disabled}}
      readonly={{if readonly "readonly"}}
      required={{required}}
      tabindex={{tabindex}}
      minlength={{minlength}}
      maxlength={{maxlength}}
      autocomplete={{autocomplete}}
      form={{form}}
      spellcheck={{spellcheck}}
      wrap={{wrap}}
    ></textarea>
    {{partial "components/form-element/feedback-icon"}}
    {{partial "components/form-element/errors"}}
  </div>
{{else}}
  <div class="{{horizontalInputGridClass}} {{horizontalInputOffsetGridClass}}">
    <textarea
      value={{value}}
      class="form-control"
      oninput={{action "change" value="target.value"}}
      onchange={{action "change" value="target.value"}}
      id={{formElementId}}
      name={{name}}
      cols={{cols}}
      rows={{rows}}
      placeholder={{placeholder}}
      autofocus={{autofocus}}
      disabled={{disabled}}
      readonly={{if readonly "readonly"}}
      required={{required}}
      tabindex={{tabindex}}
      minlength={{minlength}}
      maxlength={{maxlength}}
      autocomplete={{autocomplete}}
      form={{form}}
      spellcheck={{spellcheck}}
      wrap={{wrap}}
    ></textarea>
    {{partial "components/form-element/feedback-icon"}}
    {{partial "components/form-element/errors"}}
  </div>
{{/if}}
